interface {{ name }}Struct {
    readonly $gtype: GObject.GType<{{ name }}>

    {%- if constructor %}
    {{ constructor|indent(4) }}
    {%- else %}
    [Symbol.hasInstance](instance: unknown): instance is {{ name }}
    {%- endif %}

    {%- for ctor in constructors %}
    {{ ctor|indent(4) }}
    {%- endfor %}

    {%- for fn in functions %}
    {{ fn|indent(4) }}
    {%- endfor %}
}

interface {{ name }} {
    {%- for field in fields %}
    {{ field.jsdoc|indent(4) }}
    {{ field.name }}: {{ field.type }}
    {%- endfor %}

    {%- for method in methods %}
    {{ method|indent(4) }}
    {%- endfor %}
}

interface $Exports {
    {{ name }}: {{ name }}Struct
}
